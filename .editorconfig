# https://editorconfig.org
# https://www.jetbrains.com/help/idea/editorconfig.html
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = tab
indent_size = 4
continuation_indent_size = 8
tab_width = 4
trim_trailing_whitespace = true
max_line_length = 130

[*.java]
# formatting
ij_java_catch_on_new_line = true
ij_java_else_on_new_line = true
ij_java_annotation_parameter_wrap =normal
ij_java_align_multiline_chained_methods = true
ij_java_spaces_around_equality_operators = true
ij_java_spaces_around_relational_operators = true
ij_java_spaces_around_ternary_operators = true
ij_java_spaces_within_array_initializer_braces = true
# import
ij_java_imports_layout = @*,$*,|,java.**,javax.**,|,*
ij_java_layout_on_demand_import_from_same_package_first = true
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999

[*.{ts,js}]
continuation_indent_size = 4
ij_typescript_spaces_within_imports = true

[*.{adoc,md}]
indent_style = space

[*.groovy]
ij_groovy_class_count_to_use_import_on_demand = 999
ij_groovy_names_count_to_use_import_on_demand = 999

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{xml,html}]
max_line_length = 260
ij_xml_space_inside_empty_tag = false

[*.{xjb,xsd}]
indent_style = space

[*.json]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2
